{
  "name": "mking-friend",
  "version": "1.0.0",
  "description": "MKing Friend - A modern social networking platform for meaningful connections",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "setup": "pnpm install && pnpm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install",
    "check-deps": "pnpm audit && pnpm outdated",
    "update-deps": "pnpm update --recursive"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "backend",
    "frontend",
    "packages/*",
    "tools/*"
  ],
  "keywords": [
    "social-network",
    "dating",
    "microservices",
    "typescript",
    "nestjs",
    "react",
    "pnpm",
    "monorepo"
  ],
  "author": "MKing Friend Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimhsiao/mking-frnd.git"
  },
  "bugs": {
    "url": "https://github.com/kimhsiao/mking-frnd/issues"
  },
  "homepage": "https://github.com/kimhsiao/mking-frnd#readme"
}